<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="onHome" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="index">
    <button class='btn1' open-type='openSetting' bindtap='onProblem'>
      <view>查看所有题目</view>
    </button>
    <button class='btn2' open-type='openSetting' bindtap='onSolve'>
      <view>查看所有题解</view>
    </button>
    <button class='btn3' open-type='openSetting' bindtap='onAnalyse'>
      <view>查看个人量化分析</view>
    </button>
  </view>
  </view>

